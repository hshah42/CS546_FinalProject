<body>
    <main>
        <div class="row">
            <div class="col-lg-6 h-100" style="align-items: center; min-height: 100%; min-height: 100vh; display: flex; background-color:#212529">
                <img style="max-width: 100%; max-height: 100%" src="../../public/images/logo2.png">
            </div>
            <div class="col-lg-6 h-100" style="align-items: center; min-height: 100%; min-height: 100vh; display: flex;">
                <form style="margin: 0 auto; width:80%;" method="POST">
                    <h1>Reset Password</h1>
                    <br/>
                    <div class="form-group">
                        <label for="newpassword">Enter new password</label>
                        <input type="password" class="form-control" id="newpassword" name="newpassword" placeholder="Enter password">
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password">
                    </div>
					<div class="form-group">
                        <input type="hidden" class="form-control" id="_id" name="_id" value="{{_id}}">
                    </div>
					
                    
                    <br/>
                    <br/>
                    <button type="submit" value="Submit" id="submit" formaction="/changePassword?_id={{_id}}" class="btn btn-outline-success">Submit</button>
                    <button type="submit" value="Submit" id="submit" formaction="/" class="btn btn-outline-danger">Cancel</button>

				</form>
            </div>
			
        </div>
		
		
    </main>
